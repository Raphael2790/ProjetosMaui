<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="AppMAUIGallery.Views.Styles.AppThemeBindingPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="AppThemeBindingPage"
    BackgroundColor="{AppThemeBinding Dark={StaticResource Blue300Accent},
                                      Light={StaticResource Blue100Accent},
                                      Default={StaticResource Blue200Accent}}">
    <VerticalStackLayout>
        <Label
            HorizontalOptions="Center"
            Text="{AppThemeBinding Dark='Dark Theme',
                                   Light='Light Theme',
                                   Default='Default Theme'}"
            VerticalOptions="Center" />
    </VerticalStackLayout>
</ContentPage>