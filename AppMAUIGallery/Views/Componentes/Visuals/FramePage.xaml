<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="AppMAUIGallery.Views.Componentes.Visuals.FramePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="FramePage">
    <VerticalStackLayout Padding="10">
        <!--  O componente frame está em desuso, existe apenas pela portabilidade do xamarim para MAUI  -->
        <!--  Desonselhável o uso do mesmo para projetos novos, usar "Border"  -->
        <Frame
            BorderColor="DodgerBlue"
            CornerRadius="0"
            HasShadow="True">
            <Label
                HorizontalOptions="Center"
                Text="Welcome to .NET MAUI!"
                VerticalOptions="Center" />
        </Frame>
    </VerticalStackLayout>
</ContentPage>