<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="AppMAUIGallery.Views.Componentes.Visuals.BorderPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="BorderPage">
    <VerticalStackLayout Padding="10">
        <Border
            Padding="10"
            Stroke="DodgerBlue"
            StrokeDashArray="1,1,1,2,1,5"
            StrokeDashOffset="2"
            StrokeLineCap="Round"
            StrokeLineJoin="Round"
            StrokeThickness="2">
            <Label
                HorizontalOptions="Center"
                Text="Welcome to .NET MAUI!"
                VerticalOptions="Center" />
        </Border>

        <Border
            Padding="10"
            Stroke="DodgerBlue"
            StrokeShape="RoundRectangle 5,10,15,20">
            <Label Text="Oi como vai?" />
        </Border>
    </VerticalStackLayout>
</ContentPage>