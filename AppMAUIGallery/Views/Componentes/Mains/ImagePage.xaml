<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="AppMAUIGallery.Views.Componentes.Mains.ImagePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="ImagePage">
    <VerticalStackLayout>
        <Image
            Aspect="AspectFit"
            HeightRequest="200"
            Source="https://www.xamarin.com/content/images/pages/branding/assets/xamagon.png"
            WidthRequest="200" />

        <Image
            Aspect="Center"
            HeightRequest="200"
            IsAnimationPlaying="True"
            IsOpaque="True"
            Source="dotnet_bot.png"
            WidthRequest="200" />
        <!--  Propriedades IsOpaque e IsAnimationPlaying são apenas para dispositivos moveis  -->
        <!--
            A origem pode ser tanto de um arquivo local ou de um endereço na web
        -->
    </VerticalStackLayout>
</ContentPage>