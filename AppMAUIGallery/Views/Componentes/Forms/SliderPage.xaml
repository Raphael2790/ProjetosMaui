<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="AppMAUIGallery.Views.Componentes.Forms.SliderPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="SliderPage">
    <VerticalStackLayout>
        <Label
            HorizontalOptions="Start"
            Text="Quantos quartos possui o imÃ³vel?"
            VerticalOptions="Center" />
        <Slider
            DragCompleted="Slider_DragCompleted"
            DragStarted="Slider_DragStarted"
            Maximum="10"
            MaximumTrackColor="DodgerBlue"
            Minimum="1"
            MinimumTrackColor="LightBlue"
            ThumbColor="Aquamarine"
            ThumbImageSource="dotnet_bot.png"
            ValueChanged="Slider_ValueChanged"
            Value="1" />
        <Label x:Name="LblStatus" />
        <Label x:Name="LblValue" />
    </VerticalStackLayout>
</ContentPage>