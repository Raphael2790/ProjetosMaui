    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="DatePickerPage">
    <VerticalStackLayout Padding="10">
        <DatePicker
            Date="2022/03/10"
            Format="dd/MMMM/yyyy"
            MaximumDate="2022/03/20"
