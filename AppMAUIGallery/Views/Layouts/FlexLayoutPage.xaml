<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="AppMAUIGallery.Views.Layouts.FlexLayoutPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="FlexLayoutPage">
    <!--  Possui comportamentos similares ao flexbox  -->
    <FlexLayout
        AlignContent="SpaceBetween"
        AlignItems="Start"
        Direction="Column"
        JustifyContent="SpaceBetween"
        Wrap="Wrap">
        <Label
            Padding="10"
            BackgroundColor="Aqua"
            FlexLayout.AlignSelf="Auto"
            FlexLayout.Grow="1"
            FlexLayout.Order="1"
            Text="Linha 1" />
        <Label
            Padding="10"
            BackgroundColor="Blue"
            FlexLayout.AlignSelf="Center"
            FlexLayout.Basis="20%"
            FlexLayout.Order="0"
            Text="Linha 2" />
        <Label
            Padding="10"
            BackgroundColor="BlueViolet"
            FlexLayout.AlignSelf="End"
            FlexLayout.Order="2"
            Text="Linha 3" />
        <Label
            Padding="10"
            BackgroundColor="Brown"
            FlexLayout.AlignSelf="Stretch"
            FlexLayout.Grow="1"
            FlexLayout.Order="3"
            FlexLayout.Shrink="0"
            Text="Linha 4" />
    </FlexLayout>
</ContentPage>