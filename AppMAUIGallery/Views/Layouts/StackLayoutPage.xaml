<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="AppMAUIGallery.Views.Layouts.StackLayoutPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="StackLayoutPage">
    <StackLayout
        Margin="20"
        Padding="10"
        BackgroundColor="AliceBlue"
        Orientation="Vertical"
        Spacing="20">
        <Label
            HorizontalOptions="Center"
            Text="Página StackLayout"
            VerticalOptions="Center" />
        <VerticalStackLayout
            Margin="10"
            Padding="10"
            BackgroundColor="Aquamarine"
            Spacing="10">
            <Label Text="Olá Mundo 1!" />
            <Label Text="Olá Mundo 2!" />
        </VerticalStackLayout>
        <HorizontalStackLayout
            Margin="10"
            Padding="10"
            BackgroundColor="Aquamarine"
            Spacing="10">
            <Label Text="Olá Mundo 1!" />
            <Label Text="Olá Mundo 2!" />
        </HorizontalStackLayout>
    </StackLayout>
</ContentPage>